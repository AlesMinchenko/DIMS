@model HIMS.Server.Models.TaskTrackViewModel

@{
    Layout = null;
}
<style>
    dt {
        padding: 5px
    }

    dd {
        padding: 5px
    }
</style>

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h2>Tasks deleting</h2>
    </div>
    <h3 class="col-md-offset-1">Are you sure you want to delete this task track?</h3>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.TrackDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TrackDate)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TrackNote)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TrackNote)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.UserTask.UserTaskId)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.UserTask.UserTaskId)
            </dd>

        </dl>

        <div class="form-group col-md-offset-5">
            <input type="submit" value="Delete" class="btn btn-default" /> |
        </div>
    }
</div>

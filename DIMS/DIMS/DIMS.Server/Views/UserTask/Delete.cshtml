@model HIMS.Server.Models.UserTaskViewModel
@{
    Layout = null;
}

<style>
    dt {
        padding: 5px
    }

    dd {
        padding: 5px
    }
</style>

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h2>Tasks deleting</h2>
    </div>
    <h3 class="col-md-offset-1">Are you sure you want to delete this task?</h3>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="dl-horizontal">
            <dl>
                <dd>
                    @Html.DisplayFor(model => model.UserTaskId)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.StateId)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TaskId)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UserId)
                </dt>
            </dl>

            <div class="form-actions col-md-offset-5">
                <input type="submit" value="Delete" class="btn btn-default" /> |
            </div>
        </div>
    }
</div>

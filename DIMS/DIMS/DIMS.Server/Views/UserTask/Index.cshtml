@model IEnumerable<HIMS.Server.Models.UserTaskViewModel>

@{
    ViewBag.Title = "Index";
}
<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
<h2>User's tasks list</h2>
<hr />
<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "taskCreate" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserTaskId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StateId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaskId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserTaskId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StateId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaskId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserTaskId }, new { @class = "editTask" }) |
                @Html.ActionLink("Details", "Details", new { id = item.UserTaskId }, new { @class = "taskItem" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.UserTaskId }, new { @class = "taskDelete" })
            </td>
        </tr>
    }

</table>
@section scripts
{
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $(".taskDelete").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
            $.ajaxSetup({ cache: false });
            $(".editTask").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
            $.ajaxSetup({ cache: false });
            $(".taskCreate").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
            $(".taskItem").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}